{
  "name": "@thehumanpatternlab/hpl",
  "version": "0.0.1-alpha.5",
  "description": "AI-forward, automation-safe SDK and CLI for the Human Pattern Lab",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdaInTheLab/the-human-pattern-lab-cli.git"
  },
  "homepage": "https://github.com/AdaInTheLab/the-human-pattern-lab-cli#readme",
  "bugs": {
    "url": "https://github.com/AdaInTheLab/the-human-pattern-lab-cli/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "hpl": "./dist/bin/hpl.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsx ./bin/hpl.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node ./dist/bin/hpl.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "json:check": "tsx ./bin/hpl.ts --json version | node -e \"JSON.parse(require('fs').readFileSync(0,'utf8'))\"",
    "lint": "node -e \"console.log('lint: add eslint when ready')\""
  },
  "dependencies": {
    "commander": "^12.1.0",
    "execa": "^9.6.1",
    "gray-matter": "^4.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "human-pattern-lab",
    "hpl",
    "ai",
    "ai-forward",
    "automation",
    "automation-safe",
    "cli",
    "sdk",
    "developer-tools",
    "observability",
    "notes",
    "knowledge-systems"
  ]
}
